<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
	namespace="com.goodee.everydoctor.drug.prescription.DrugPrescriptionMapper">

	<!-- 약목록 -->
	<select id="findDrugPrescriptionList"
		resultType="DrugPrescriptionVO">
		SELECT * FROM DRUG
		ORDER BY
		DRUGNUM
	</select>

	<!-- 약 상세정보 -->
	<select id="findDrugPrescriptionDetail"
		parameterType="DrugPrescriptionVO" resultType="DrugPrescriptionVO">
		SELECT * FROM DRUG WHERE
		DRUGNAME = #{drugName}
	</select>

	<!-- 증상과목 -->
	<select id="findDrugPrescriptionSection"
		resultType="DrugPrescriptionVO">
		SELECT * FROM SECTION WHERE SECTIONKIND=0
	</select>
	<!-- 진료과목 -->
	<select id="findDrugPrescriptionCategory"
		resultType="DrugPrescriptionVO">
		SELECT * FROM CATEGORY WHERE CATEGORYKIND=0
	</select>

	<select id="findDrugDeliveryNum" resultType="DrugPrescriptionVO">
		SELECT * FROM
		DRUGDELIVERY
		WHERE DRUGDELIVERYNUM
		ORDER BY RAND()
		LIMIT 4;
	</select>
</mapper>